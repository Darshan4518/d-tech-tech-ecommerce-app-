generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  address   String?
  phoneNo   Int?     @unique
  createdAt DateTime @default(now())
  Order     Order[]
}

model Order {
  id        Int      @id @default(autoincrement())
  userId    Int
  User      User     @relation(fields: [userId], references: [id])
  total     Int
  items     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
